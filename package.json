{
  "name": "@daaku/firebase-auth",
  "author": "Naitik Shah <n@daaku.org>",
  "version": "2.4.0",
  "description": "Firebase Auth token management.",
  "repository": "git@github.com:daaku/firebase-auth",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "tsc",
    "test": "vite build && URI=file://$PWD/dist/test/index.html qunit-puppeteer",
    "deploy": "npm run test && npm publish --access=public",
    "prepare": "npm run build",
    "dev": "vite"
  },
  "keywords": [
    "firebase",
    "auth"
  ],
  "devDependencies": {
    "@daaku/qunit-puppeteer": "^3.0.0",
    "@types/qunit": "^2.11.2",
    "nanoid": "^5.0.3",
    "qunit": "^2.17.2",
    "typescript": "^5.0.2",
    "vite": "^5.0.2"
  }
}
